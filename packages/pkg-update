#!/bin/sh

source ./PKGBUILD

echo "Updating $pkgname..."
rm *.pkg.tar.zst*
if [ "$1" == "--nosign" ]
then
    makepkg -f
else
    makepkg -f --sign --key A308BDBE10D7C9C168AA2E055F2E4806FFE6B2CD
fi

EXIT=$?
if [ $EXIT -eq 0 ]
then
    echo "$pkgname updated successfully!"
else
    echo "Error! Could not update $pkgname" >&2
    exit $EXIT
fi

rm ../../x86_64/$pkgname*
cp *.pkg.tar.zst* ../../x86_64/
