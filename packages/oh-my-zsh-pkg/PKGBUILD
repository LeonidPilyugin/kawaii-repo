# Maintainer: Leonid Pilyugin  <l.pilyugin04@gmail.com>

pkgname=kawaii-oh-my-zsh
pkgver=1.1
pkgrel=1
pkgdesc='Framework for kawaii zsh configuration.'
arch=('x86_64')
depends=('zsh' 'git')
url="https://github.com/ohmyzsh/ohmyzsh"
license=('MIT')

package() {
	export ZSH=$pkgdir/usr/lib/oh-my-zsh
	export RUNZSH="no"
	export CHSH="no"
	sh -c "$(curl -fsSL https://raw.githubusercontent.com/ohmyzsh/ohmyzsh/master/tools/install.sh)"
	# install autosuggestions plugin
	git clone https://github.com/zsh-users/zsh-autosuggestions.git $ZSH/plugins/zsh-autosuggestions
	rm -rf $ZSH/plugins/zsh-autosuggestions/.git*
	# install syntax highlighting plugin
	git clone https://github.com/zsh-users/zsh-syntax-highlighting.git $ZSH/plugins/zsh-syntax-highlighting
	rm -rf $ZSH/plugins/zsh-syntax-highlighting/.git*
	install -m644 $srcdir/kawaii.zsh-theme $ZSH/themes/kawaii.zsh-theme
	install -dm755 $pkgdir/etc/skel
	install -m644 $srcdir/.zshrc $pkgdir/etc/skel/.zshrc
}
