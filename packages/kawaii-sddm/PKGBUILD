pkgname=kawaii-sddm-themes
pkgver=1.0
pkgrel=1
pkgdesc='Kawaii sddm themes.'
groups=(kawaii)
url='https://github.com/LeonidPilyugin/kawaii-sddm-themes'
depends=(sddm)
arch=(x86_64)
license=('GPL3')

package() {
    dir=$pkgdir/usr/share/sddm/themes/
    install -dm755 $dir
    cp -r $srcdir/* $dir
}

