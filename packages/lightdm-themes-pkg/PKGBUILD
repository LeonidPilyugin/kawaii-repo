pkgname=kawaii-lightdm-themes
pkgver=1.0
pkgrel=1
pkgdesc='Kawaii lightdm themes.'
depends=(lightdm lightdm-webkit2-greeter)
arch=('x86_64')
license=('GPL3')
groups=('kawaii')

package() {
    dir=$pkgdir/usr/share/lightdm-webkit/themes/
    install -dm755 $dir
	cp -r $srcdir/* $dir
}

